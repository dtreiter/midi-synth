{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2016"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
